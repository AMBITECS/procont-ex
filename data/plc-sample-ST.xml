        <body>
          <ST>
            <xhtml:p><![CDATA[IF Reset THEN
  Cnt := ResetCounterValue;
ELSE
  Cnt := Cnt + 1;
END_IF;

Out := Cnt;

Cnt_R := INT_TO_REAL(Cnt);
Cnt_R := FACTORIAL(Cnt_R);
]]></xhtml:p>
          </ST>
